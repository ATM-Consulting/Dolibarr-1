{
    "name": "SplashSync/Dolibarr",
    "description": "Splash Module for Dolibarr ERP",

    "license": "GPL",

    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "config": {
        "vendor-dir": "splash/Resources"
    },
    
    "repositories": [
        {
            "type":"package",
            "package": 
            {
                "name": "Splash",
                "version": "master",
                "source": 
                {
                    "url": "https://github.com/SplashSync/Php-Core.git",
                    "type": "git",
                    "reference":"master"
                }
            }
        },
        {
            "type":"package",
            "package": 
            {
                "name": "Test",
                "version": "master",
                "source": 
                {
                    "url": "https://github.com/SplashSync/Php-Tester.git",
                    "type": "git",
                    "reference":"master"
                }
            }
        }        
    ],
    "require": {
        "Splash": "master",
        "Test": "master"
    } 
    
}